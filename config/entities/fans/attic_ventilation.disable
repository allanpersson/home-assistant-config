---
platform: template
fans:
  attic_ventilation:
    value_template: >-
      {% if is_state('switch.attic_ventilation_speed_low', 'off') %}
        on
      {% else %}
        off
      {% endif %}
    turn_on:
      - service: switch.turn_on
        data_template:
          entity_id: >-
            {% if speed == 'high' %}
              switch.attic_ventilation_speed_high
            {% else %}
              switch.attic_ventilation_speed_medium
            {% endif %}
    turn_off:
      - service: switch.turn_on
        entity_id: switch.attic_ventilation_speed_low
    speed_template: >-
        {% if is_state('switch.attic_ventilation_speed_medium', 'on') %}
          medium
        {% elif is_state('switch.attic_ventilation_speed_high', 'on') %}
          high
        {% else %}
          low
        {% endif %}
    set_speed:
      - service_template: >-
          {% if speed == 'low' %}
            fan.turn_off
          {% else %}
            switch.turn_on
          {% endif %}
        data_template:
          entity_id: >-
            {% if speed == 'medium' %}
              switch.attic_ventilation_speed_medium
            {% elif speed == 'high' %}
              switch.attic_ventilation_speed_high
            {% else %}
              fan.attic_ventilation
            {% endif %}
    speeds:
      - low
      - medium
      - high
